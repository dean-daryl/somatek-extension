{
  "manifest_version": 3,
  "name": "SomaTek",
  "version": "1.3",
  "description": "An extension to simplify complex texts using AI.",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon16.png",
    "128": "icons/icon16.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon16.png",
      "128": "icons/icon16.png"
    }
  },
  "permissions": ["contextMenus", "activeTab", "tabs", "scripting"]
}
