{
  "manifest_version": 2,
  "name": "SomaTek AI",
  "version": "1.0",
  "description": "A browser extension to simplify complex texts using AI.",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon16.png",
    "128": "icons/icon16.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon16.png",
      "128": "icons/icon16.png"
    }
  },
  "permissions": ["contextMenus", "activeTab", "tabs", "runtime", "scripting", "action"]
}
